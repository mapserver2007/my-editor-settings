{
    // git
    "git.path": "/usr/local/bin/git",

    // Editor settings
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "workbench.iconTheme": "vscode-icons",

    // PHP
    "php.validate.executablePath": "/Users/mapserver2007/.anyenv/envs/phpenv/shims/php",
    "php.executablePath": "/Users/mapserver2007/.anyenv/envs/phpenv/shims/php",

    // Ruby
    "ruby.lint": {
        "reek": true,
        "rubocop": true,
        "ruby": false, //Runs ruby -wc
        "fasterer": true,
        "debride": true,
        "ruby-lint": false
    },
    "ruby.linter.executablePath": "/Users/mapserver2007/.anyenv/envs/rbenv/shims/ruby",
    "ruby.rctComplete.commandPath": "/Users/mapserver2007/.anyenv/envs/rbenv/shims/ruby",

    // Others
    "files.associations": {
        "Vagrantfile":"ruby"
    },

    // Language settings
    "[ruby]": {
        "editor.tabSize": 2
    },
    "[php]": {
        "editor.tabSize": 4
    }
}